# Some util function
function stylingEcho() {
    if [[ "$1" == "modify" ]]; then
        echo "\e[32mModified(zsh overlap)\e[0m: $2"
    elif [[ "$1" == "ban" ]]; then
        echo "\e[31mBanned(zsh overlap)\e[0m: $2"
    fi
}

